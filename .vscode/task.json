{
    "version": "2.0.0",
    "tasks": [
        
        {
            "type": "cppbuild",
            "label": "C: gcc build active file", 
            "command": "gcc.exe", 
            "args": [
                "-fdiagnostics-color=always",
                "-g", 
                "${file}", 
                "-o", 
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "编译器: gcc.exe"
        }
    ]
}